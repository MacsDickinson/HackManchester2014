<html class="no-js">
<!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>HackManchester 2014</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href='//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.js' rel='stylesheet' />
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.js"></script>
    <script src='https://api.tiles.mapbox.com/mapbox.js/v2.1.3/mapbox.js'></script>
    <script src='https://api.tiles.mapbox.com/mapbox.js/plugins/arc.js/v0.1.0/arc.js'></script>
    <link href='https://api.tiles.mapbox.com/mapbox.js/v2.1.3/mapbox.css' rel='stylesheet' />
    <link href='/Content/Styles/css/screen.css' rel='stylesheet' />
    <script src="//use.typekit.net/qhz1mph.js"></script>
    <script>try { Typekit.load(); } catch (e) { }</script>
    <style type="text/css">
        body {
            font-family: 'Helvetica Neue', Helvetica, Arial;
            margin: 0;
            padding: 0;
        }

        #map-wrapper {
            position: relative;
            width: auto;
            margin: 5px;
            height: 400px;
        }

        #map {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
        }
        .path-start {
               -webkit-transition: stroke-dashoffset 5s ease-in;
               -moz-transition: stroke-dashoffset 5s ease-in;
               -o-transition: stroke-dashoffset 5s ease-in;
               transition: stroke-dashoffset 5s ease-in;
           }
    </style>

</head>
<body>
    <header class="header-site">
        <div class="layout-constrained">
            <a class="logo-site" href="/">Project<strong>X</strong></a>
            <ul class="nav nav--site">
                @if (Html.GetUser() == null)
                {
                    <li class="nav__item">
                        <a href="/Login" class="nav__link btn btn--tertiary btn--m">Sign In</a>
                    </li>
                }
                else
                {
                    <li class="nav__item">
                        <span>Signed in as @Html.GetUser().UserInfo.Name</span>
                        <a href="/logout" class="nav__link btn btn--tertiary btn--l">Sign Out</a>
                    </li>
                }
            </ul>
        </div>
    </header>
    @RenderBody()
</body>
</html>
