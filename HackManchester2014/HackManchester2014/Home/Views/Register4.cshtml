@{
    Layout = "Shared/_Layout.cshtml";
}
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>

<article class="register main-content">
    <section class="container-block">
        <div class="layout-constrained layout-constrained--narrow">

            <div class="page-intro">
                <h1>Upload Your Picture &amp; Nominate</h1>
                <p>
                    Great work for making your donation, you can now upload your proof for completing the challenge.
                </p>
            </div>

            <div class="form-panel">
                <h2 class="progress-step"><span class="progress-step__indicator">3</span>Upload picture</h2>
                <div class="form-step__intro">
                    <p>
                        Upload or link the image.
                    </p>
                </div>

                <fieldset>
                    <legend class="is-offscreen">Prove you have done the challenge</legend>

                    <div class="form-group">
                        <label for="proof-file" class="btn btn--primary">
                            Upload your image
                            <input type="file" id="proof-file" />
                        </label>


                    </div>
                </fieldset>
            </div>
            
        </div>
    </section>
</article>