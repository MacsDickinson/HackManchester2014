@{
    Layout = "Shared/_Layout.cshtml";
}
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>

<article>
    <section class="container-block">
        <div class="layout-constrained layout-constrained--narrow">
            <h2 class="progress-step"><span class="progress-step__indicator">2</span> Accept your challenge</h2>

            <fieldset>
                <legend class="form-step__intro">Please select the challenge you would like to complete...</legend>


                <ul class="form-group input-list input-list--trio">
                    <li class="input-list__item">
                        <label for="challenge-x" class="btn-radio">
                            <input type="radio" id="challenge-x" name="challengeSelection" />
                            <span class="btn-radio__btn">
                                <span class="radio-button__title">Project X</span>
                                <span class="radio-button__description">A Take a picture of yourself with...</span>
                            </span>
                        </label>
                    </li>
                    <li class="input-list__item">
                        <label for="challenge-y" class="btn-radio">
                            <input type="radio" id="challenge-y" name="challengeSelection" />
                            <span class="btn-radio__btn">
                                <span class="radio-button__title">Project Sample 1</span>
                                <span class="radio-button__description">This is a sample challenge, dont pick it!</span>
                            </span>
                        </label>
                    </li>
                    <li class="input-list__item">
                        <label for="challenge-z" class="btn-radio">
                            <input type="radio" id="challenge-z" name="challengeSelection" />
                            <span class="btn-radio__btn">
                                <span class="radio-button__title">Project Sample 2</span>
                                <span class="radio-button__description">This is a sample challenge, dont pick it!</span>
                            </span>
                        </label>
                    </li>
                </ul>

                <div class="form-actions form-actions--divide">
                    <span class="form-actions__content">
                        <a class="btn btn--primary">Continue</a>
                    </span>
                </div>
            </fieldset>
        </div>
    </section>
</article>