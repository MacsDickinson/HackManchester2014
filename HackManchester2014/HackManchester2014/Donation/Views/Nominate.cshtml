@{
    Layout = "Shared/_Layout.cshtml";
}
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<HackManchester2014.Donation.Models.NominateViewModel>

<article class="register main-content">
    <section class="layout-constrained layout-constrained--narrow">
        <div class="layout-constrained layout-constrained--narrow">

            <div class="page-intro">
                <h1>Nominate more folks!</h1>
                <p>
                    Great work for making your donation, you can now nominate your mates.
                </p>
            </div>

            <div class="form-panel">
                <h2 class="progress-step"><span class="progress-step__indicator">4</span>Enter your friends names</h2>
                
                <fieldset>
                    <legend class="form-step__intro">Click below to share the nomination on twitter.</legend>

                    <div class="form-group">

                        <a href="//twitter.com/share?url=@Model.NominationUrl&text=For @Model.ChallengeTitle I nominate:">Share on twitter</a>
