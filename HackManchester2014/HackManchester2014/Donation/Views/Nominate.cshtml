                            <label for="proof-file" class="btn btn--primary">
                                Upload your image
                                <input type="file" id="proof-file" name="file" onchange="$('#upload-form').submit();" />
                            </label>

                        </form>*@</div>
                </fieldset>
            </div>

        </div>
    </section>
</article>